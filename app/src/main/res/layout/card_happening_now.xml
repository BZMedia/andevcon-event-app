<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/standard_gap"
    android:layout_marginLeft="@dimen/screen_horizontal_margin"
    android:layout_marginStart="@dimen/screen_horizontal_margin"
    android:layout_marginRight="@dimen/screen_horizontal_margin"
    android:layout_marginEnd="@dimen/screen_horizontal_margin"
    >

    <LinearLayout
        style="@style/Widget.CardContent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/card_title_happening_now"
            />

        <LinearLayout
            android:id="@+id/vg_time_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Include while designing for previewing -->
            <!--<include layout="@layout/item_time_group_sessions"/>-->
            <!--<include layout="@layout/item_time_group_sessions"/>-->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
